package com.gmail.v.bulgakov.max;

import java.io.File;
import java.io.IOException;
import java.io.InputStreamReader;
import java.io.PrintWriter;
import java.util.Scanner;

public class Home1One {

	public static void main(String[] args)  {

		File folder = new File(".");

		File file = new File("YourText.txt");

		Scanner sc = new Scanner(System.in);

		System.out.println("Enter your text");

		System.out.println("Enter \"SAVE\" for save your text in file");

		String text = sc.nextLine();

		// String s = "SAVE";
		// while(!s.equals("")){
		// s = sc.nextLine();
		// }

		saveStringToFile(text, file);

		System.out.println("Your text has been saved in file \"YourText\" ");

	}

	public static void saveStringToFile(String text, File file) throws IOException { // сохранение строки в файл

		try (PrintWriter pw = new PrintWriter(file)) {

			pw.println(text);

		} catch (IOException e) {

			e.printStackTrace();
		}
	

	InputStreamReader inStRe = null;

    try {
       inStRe = new InputStreamReader(System.in);
       System.out.println("Введите символы, символ 'q' для выхода.");
       char a;
       do {
          a = (char) inStRe.read();
          System.out.print(a);
       } while(a != 'q');
    }finally {
       if (inStRe != null) {
          inStRe.close();
       }
    }
    }
    
}
